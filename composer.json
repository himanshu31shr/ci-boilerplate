{
	"description": "A simple codeigniter boilerplate",
	"name": "php-ci/boilerplate",
	"type": "project",
	"license": "MIT",
	"require": {
		"php": ">=5.3.7",
		"kenjis/codeigniter-ss-twig": "^0.2.1",
		"symfony/console": "^3.4",
		"illuminate/database": "^5.6"
	},
	"suggest": {
		"paragonie/random_compat": "Provides better31shrrandomness in PHP 5.x"
	},
	"require-dev": {
		"mikey179/vfsStream": "1.1.*",
		"phpunit/phpunit": "4.* || 5.*"
	},
	"autoload": {
	    "classmap": [
	    	"commands",
            "application/core",
            "application/models",
            "application/libraries"
	    ]
	}
}
